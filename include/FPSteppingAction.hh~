#ifndef FLPSteppingAction_h
#define FLPSteppingAction_h 1

#include "G4UserSteppingAction.hh"

class FLPDetectorConstruction;
class FLPEventAction;

/// Stepping action class.
///
/// In UserSteppingAction() there are collected the energy deposit and track 
/// lengths of charged particles in Absober and Gap layers and
/// updated in B4aEventAction.

class FLPSteppingAction : public G4UserSteppingAction
{
public:
  FLPSteppingAction(const FLPDetectorConstruction* detectorConstruction,
                    FLPEventAction* eventAction);
  virtual ~FLPSteppingAction();

  virtual void UserSteppingAction(const G4Step* step);
    
private:
  const FLPDetectorConstruction* fDetConstruction;
  FLPEventAction*  fEventAction;  
};

//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......

#endif
